NAME                =   ft_containers

CC                  =   clang++

CFLAGS              =   -Wall -Wextra -Werror

VPATH               =   includes/ \
                        srcs/ 

INCS                =   test.hpp test2.hpp

SRCS                =   test.cpp \
                        test2.cpp 

OPATH               =   objs/

OBJS                =   $(SRCS:%.cpp=$(OPATH)%.o)

all                 :   $(NAME)

$(OPATH)%.o         :   %.cpp $(INCS)
	$(CC) $(CFLAGS) -c $< -o $@

$(NAME)             :   $(OBJS)
	$(CC) $(CFLAGS) $(OBJS)  main/main.cpp -o $(NAME)
# --trace-children=yes

clean               :
	$(RM) $(OBJS)
	$(RM) -r $(OPATH)

fclean              :   clean
	$(RM) $(NAME)

re                  :   fclean all

.PHONY              :   all clean fclean re